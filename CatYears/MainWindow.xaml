<Window 
    x:Class="CatYears.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:local="clr-namespace:CatYears"
    mc:Ignorable="d"
    Title="MainWindow" 
    Height="450" 
    Width="800"
    >
    <!--TODO: Step 1: Cat Years App
    This program will tell you how old your cat is in human years
    First add an image of a cat so we can use it
    Right click on solution Add > Existing item > Cat.jpg
    -->
    <!--TODO: Step 2: Add main stack panel-->
    <StackPanel>
        <!--TODO: Step 3: Add user input box-->
        <StackPanel Orientation="Horizontal"                     
                    Margin="1,5,0,0">
            <TextBlock
                Text="How old is your cat? (years)"
                FontSize="18"
            />
            <TextBox Name="InputCatAge"
                     Width="120"
                     Margin="5,0,0,0"
                     KeyDown="InputCatAge_KeyDown"
                     TextAlignment="Center"
                     FontSize="16"
            />
        </StackPanel>
        <!--TODO: Step 4: Add result text block-->
        <TextBlock Name="ResultTextBlock"
                   Text="Your cat is "
                   FontSize="18"
        />
        <!--TODO: Step 5: Add background image
        GOTO MainWindow.xaml.cs -->
        <Image Source="/Cat.jpg" />
    </StackPanel>
</Window>
