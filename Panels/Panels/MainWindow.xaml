<Window x:Class="Panels.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Panels"
        mc:Ignorable="d"
        Title="Grids" Height="450" Width="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="0.33*"/>
            <ColumnDefinition Width="0.33*"/>
            <ColumnDefinition Width="0.33*"/>
            <!--Only takes the width that it child requires "auto"--> 
            <!--<ColumnDefinition Width="Auto"/>-->
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions >
            <RowDefinition Height="1*"></RowDefinition>
            <RowDefinition Height="1*"></RowDefinition>
        </Grid.RowDefinitions>
        <Button Grid.Column="0" Grid.Row="0">Button 00</Button>
        <Button Grid.Row="0" Grid.Column="1">Button 01</Button>
        <Button Grid.Row="0" Grid.Column="2">Button 02</Button>
        <Button Grid.Row="1" Grid.Column="0">Button 03</Button>
        <Button Grid.Row="1" Grid.Column="1">Button 04</Button>
        <Button Grid.Row="1" Grid.Column="2">Button 05</Button>
        
    </Grid>
</Window>
