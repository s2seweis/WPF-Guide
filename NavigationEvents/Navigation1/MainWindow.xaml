<Window x:Class="Navigation1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Navigation1"
        mc:Ignorable="d"
        Title="Navigation1" Height="450" Width="800">
    
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="40"></RowDefinition>
            <RowDefinition Height="*"></RowDefinition>
        </Grid.RowDefinitions>

        <StackPanel
            Grid.Row="0"
            Orientation="Horizontal"
            HorizontalAlignment="Center"
            >
            <Button Width="100" Click="Button_Click_1">Page 1</Button>
            <Button Width="100" Click="Button_Click_2">Page 2</Button>
        </StackPanel>

        <Frame
            Grid.Row="1"
            NavigationUIVisibility="Hidden"
            Name="MainWindowFrame"
            >
            
        </Frame>
        
    </Grid>
    
</Window>
